{
  "swagger": "2.0",
  "info": {
    "title": "Clients API",
    "description": "API for managing clients and employees",
    "version": "1.0.0"
  },
  "host": "clientsapi-cse341.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/clients": {
      "get": {
        "description": "Get all clients",
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new client",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "client_id": { "type": "number" },
                "name": { "type": "string"},
                "companyCode": { "type": "string" },
                "address": { "type": "string" },
                "additionalInfo": { "type": "boolean"},
                "employees": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "number" },
                      "employeeName": { "type": "string" },
                      "age": { "type": "number" }
                    }
                  }
                }
              },
              "required": ["client_id", "name"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete all clients",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/clients/additional-info": {
      "get": {
        "description": "Get clients with additional info",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/clients/{client_id}": {
      "get": {
        "description": "Get a single client by ID",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update a client",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "companyCode": { "type": "string" },
                "address": { "type": "string" },
                "additionalInfo": { "type": "boolean" },
                "employees": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "number" },
                      "employeeName": { "type": "string" },
                      "age": { "type": "number" }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a client",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/clients/{client_id}/employees": {
      "post": {
        "description": "Add an employee to a client",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "number", "example": 1 },
                "employeeName": { "type": "string", "example": "John Doe" },
                "age": { "type": "number", "example": 30 }
              },
              "required": ["id", "employeeName", "age"]
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "get": {
        "description": "Get all employees for a client",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/clients/{client_id}/employees/{employee_id}": {
      "delete": {
        "description": "Remove an employee from a client",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "employee_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/": {
      "get": {
        "description": "Get API documentation URL",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "documentationURL": {
                  "type": "string",
                  "example": "http://localhost:8000/api-docs"
                }
              }
            }
          }
        }
      }
    }
  }
}